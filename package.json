{
    "name": "orbital-router",
    "version": "0.1.0",
    "description": "A nested router with parallel data fetching & mutations for Preact Signals",
    "repository": "markmals/orbital-router",
    "license": "MIT",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs"
        }
    },
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "vite build",
        "format": "prettier -w .",
        "lint": "eslint",
        "lint-fix": "eslint --fix",
        "dev": "vitest dev",
        "test": "vitest run",
        "prepack": "vite build"
    },
    "dependencies": {
        "@remix-run/router": "^1.8.0",
        "tiny-invariant": "^1.3.1"
    },
    "peerDependencies": {
        "@preact/signals": ">=1.2.0",
        "preact": ">=10.17.0"
    },
    "devDependencies": {
        "@preact/preset-vite": "^2.5.0",
        "@preact/signals": "^1.2.1",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "eslint": "latest",
        "preact": "^10.17.1",
        "prettier": "latest",
        "typescript": "^5.2.2",
        "unbuild": "latest",
        "vite": "^4.4.9",
        "vite-plugin-dts": "^3.5.3",
        "vitest": "latest"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": false,
        "arrowParens": "avoid"
    },
    "np": {
        "yarn": false
    }
}
